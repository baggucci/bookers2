<!-- 投稿機能を実装 -->
<%= form_with model: @book, local: true do |f| %>
  <h4>New Book</h4>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  
  <div class ="action">
      <%= f.submit 'Create Book' %>
  </div>
<% end %>

<h1>投稿一覧</h1>

<% @books.each do |book| %>

  <p>タイトル</p>
  <span><%= book.title %></span>
  
<% end %>
