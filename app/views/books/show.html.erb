
<!-- ユーザーの詳細 -->

<div class="container">  <!-- この行を追加 -->
  <div class="row">      <!-- この行を追加 -->

<div class="col-lg-4" style="background-color: orange;">
<div class="profile-container">
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3 class="profile-name">
    <p>"name"
      <%= @user.name %>
    </P>
  </h3>
  <h3 class="profile-introduction">
    <p>"introduction"
      <%= @user.introduction %>
    </P>
  </h3>

  <% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>


<!-- 投稿機能を実装 -->
<%= form_with model: @book do |f| %>
  <h4>New Book</h4>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <div class "action">
      <%= f.submit 'Create Book' %>
  </div>
<% end %>

<h2>Book Details</h2>

<p><strong>Title:</strong> <%= @book.title %></p>
<p><strong>Opinion:</strong> <%= @book.body %></p>

<%= link_to 'Back to List', books_path %>
<%= link_to 'Edit', edit_book_path(@book) %>
<%= link_to "削除", book_path(@book.id), method: :delete, "data-confirm" => "本当に削しますか？" %>

