
<div>
  <%= flash[:notice] %>
</div>

<div class="container">  <!-- この行を追加 -->
  <div class="row">      <!-- この行を追加 -->

    <div class="col-md-3">
      <div class="profile-container">
        <H2>User info</H2>

        <%= render "profile", user: @user %>
        <%= render "books/form", book: @book %>

      </div>
    </div>
      

    <div class="col-md-8 offset-md-1">  
      <H2>Books</H2>

      <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
    <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user) %></td>          
          </tr>
        <% end %>
      </tbody>
    </table>
