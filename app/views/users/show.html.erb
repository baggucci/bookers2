<!-- 投稿機能を実装 -->
<%= form_with model: @book do |f| %>
  <h4>New Book</h4>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <div class "action">
      <%= f.submit 'Create Book' %>
  </div>
<% end %>

<%= render 'books/list', books: @books %>


<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <%= image_tag book.get_image %>
  <% end %>
  <p>投稿ユーザー画像<%= image_tag book.user.get_profile_image(100,100) %></p>
  <p>ショップ名：<%= book.shop_name %></p>
  <p>説明：<%= book.caption %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
  <p><%= link_to "#{book.post_comments.count} コメント", book_path(book.id) %></p>
</div>
<% end %>