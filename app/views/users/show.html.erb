  <h3 class="profile-name">
    <p>"name"
      <%= @user.name %>
    </P>
  </h3>
  <h3 class="profile-introduction">
    <p>"introduction"
      <%= @user.introduction %>
    </P>
  </h3>

  <% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

